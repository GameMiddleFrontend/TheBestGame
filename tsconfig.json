{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitThis": false,
    "jsx": "react",
    "baseUrl": "src",
    "types" : [
      "react-dom/experimental"
    ],
    "paths": {
      "@images/*": ["styles/images/*"],
      "@styles/*": ["styles/*"],
      "@contexts/*": ["contexts/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@common/*": ["components/common/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["components/pages/*"],
      "@serviceWorker/*": ["serviceWorker/*"],
      "@webpack/*": ["../webpack/*"],
      "@postgres/*": ["../postgres/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.spec.ts", "src/custom.d.ts", "webpack/**/*.ts", "postgres/**/*.ts"],
  "exclude": ["node_modules"]
}
